{
    "compilerOptions": {
        "target": "es2020",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true
    },
    "include": ["src/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
