{
    "compilerOptions": {
        "lib": ["es6", "es7", "dom"],
        "target": "es5",
        "module": "es6",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "watch": true
    },
    "include": ["src/**/*.ts", "src/algorithms/aStar.ts", "src/algorithms/bfs.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
